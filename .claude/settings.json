{
  "permissions": {
    "allow": ["Bash(./install.sh:*)"],
    "additionalDirectories": ["~/.claude", "~/Desktop/nixpkgs", "~/Desktop/home-manager", "~/Desktop/infra.ncaq.net"]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Stop",
        "hooks": [
          {
            "type": "command",
            "command": "cd $CLAUDE_PROJECT_DIR && nix fmt"
          }
        ]
      }
    ]
  }
}
